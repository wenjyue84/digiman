# Database Configuration (Optional for development)
# DATABASE_URL=your_database_connection_string

# Development server will use in-memory storage if DATABASE_URL is not set
# For production, set DATABASE_URL to your PostgreSQL connection string

# Example PostgreSQL URL:
# DATABASE_URL=postgresql://username:password@localhost:5432/pelangi_db

# Google OAuth (Optional)
# GOOGLE_CLIENT_ID=your_google_client_id
# GOOGLE_CLIENT_SECRET=your_google_client_secret

# Email Configuration (Optional)
# SENDGRID_API_KEY=your_sendgrid_api_key
# FROM_EMAIL=your_from_email@domain.com

# App Configuration
NODE_ENV=development

# CORS — comma-separated origins allowed to call the API (production)
# Required when frontend and API are on the same server but browser sends Origin header
# CORS_ORIGIN=http://18.142.14.142

# Public URL — base URL for guest-facing links (self-check-in, QR codes, etc.)
# Without this, links fall back to req.get('host') which returns localhost in dev
# PUBLIC_URL=http://18.142.14.142

# Business Configuration (Optional, defaults to Pelangi Capsule Hostel)
# BUSINESS_NAME="Pelangi Capsule Hostel"
# BUSINESS_SHORT_NAME="Pelangi"
# BUSINESS_TAGLINE="Your Cozy Home in JB"
# ACCOMMODATION_TYPE="capsule" # Options: capsule, room, house
# BUSINESS_ADDRESS="26A, Jalan Perang, Taman Pelangi, 80400 Johor Bahru, Johor, Malaysia"
# BUSINESS_PHONE="+60127088789"
# BUSINESS_EMAIL="info@pelangicapsulehostel.com"
# BUSINESS_WEBSITE="www.pelangicapsulehostel.com"
# RECEIPT_PREFIX="PEL"
# BUSINESS_PRIMARY_COLOR="#E11D48"

# Seeding Units (Format: number:section[:unitType[:maxOccupancy]] comma-separated)
# SEED_UNITS="C1:back,C2:back,Studio-A:ground:studio:2"