NODE_ENV=production

# Shared Postgres for config sync (both servers use the SAME URL)
# Without this, configs are stored in local JSON files only (no cross-server sync)
DATABASE_URL=postgresql://user:pass@ep-xxx.us-east-2.aws.neon.tech/neondb?sslmode=require

# Optional: Override default paths (useful for testing or custom deployments)
# RAINBOW_KB_DIR=
# WHATSAPP_AUTH_DIR=
# WHATSAPP_DATA_DIR=

# Failover coordination (primary/standby dual-server setup)
# Set RAINBOW_ROLE=primary on local PC, RAINBOW_ROLE=standby on Lightsail
# Generate shared secret: openssl rand -hex 16
RAINBOW_ROLE=primary
RAINBOW_PEER_URL=http://18.142.14.142:3002
RAINBOW_FAILOVER_SECRET=generate-with-openssl-rand-hex-16

