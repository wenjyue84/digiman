{
  "name": "pelangi-mcp-server",
  "version": "1.0.0",
  "type": "module",
  "description": "MCP server for PelangiManager hostel management system",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx src/index.ts",
    "build": "tsc && node -e \"require('fs').cpSync('src/assistant/data','dist/assistant/data',{recursive:true});require('fs').cpSync('src/public','dist/public',{recursive:true})\"",
    "start": "node dist/index.js",
    "test": "vitest",
    "test:watch": "vitest --project unit",
    "test:all": "vitest run",
    "test:integration": "vitest run --project integration",
    "test:semantic": "vitest run --project semantic",
    "test:coverage": "vitest --coverage",
    "test:eval": "npx promptfoo eval -c tests/promptfoo/promptfooconfig.yaml",
    "test:eval:view": "npx promptfoo view",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "check": "scripts\\check-rainbow.bat",
    "start:rainbow": "scripts\\start-rainbow.bat"
  },
  "keywords": [
    "mcp",
    "pelangi",
    "hostel",
    "management"
  ],
  "author": "",
  "license": "ISC",
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^0.5.0",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/multer": "^2.0.0",
    "@types/node": "^20.10.0",
    "@types/node-cron": "^3.0.11",
    "@types/qrcode": "^1.5.5",
    "@whiskeysockets/baileys": "^7.0.0-rc.9",
    "@xenova/transformers": "^2.17.2",
    "axios": "^1.6.0",
    "chokidar": "^4.0.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "franc-min": "^6.2.0",
    "fuse.js": "^7.1.0",
    "groq-sdk": "^0.37.0",
    "multer": "^2.0.2",
    "node-cron": "^4.2.1",
    "qrcode": "^1.5.4",
    "qrcode-terminal": "^0.12.0",
    "typescript": "^5.3.3",
    "ws": "^8.18.0"
  },
  "devDependencies": {
    "@vitest/coverage-v8": "^4.0.18",
    "@vitest/ui": "^4.0.18",
    "happy-dom": "^20.6.1",
    "jsdom": "^28.0.0",
    "promptfoo": "^0.120.23",
    "tsx": "^4.7.0",
    "vitest": "^4.0.18"
  }
}
