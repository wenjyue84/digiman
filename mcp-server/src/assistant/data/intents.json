{
  "categories": [
    {
      "phase": "GENERAL_SUPPORT",
      "description": "Intents that can occur at any phase of the guest journey",
      "intents": [
        {
          "category": "greeting",
          "professional_term": "Guest Greeting",
          "patterns": [
            "^(hi|hello|hey|helo|hai|apa khabar|你好|嗨|good\\s?(morning|afternoon|evening|night))",
            "^(assalamualaikum|salam|selamat\\s?(pagi|petang|malam))"
          ],
          "flags": "i",
          "enabled": true
        },
        {
          "category": "thanks",
          "professional_term": "Guest Appreciation",
          "patterns": [
            "\\b(thanks?|thank\\s?you|terima\\s?kasih|tq|ty|appreciate)\\b",
            "(谢谢|感谢)"
          ],
          "flags": "i",
          "enabled": true
        },
        {
          "category": "contact_staff",
          "professional_term": "Staff Assistance Request",
          "patterns": [
            "\\b(staff|manager|human|person|real\\s?person|talk\\s?to|speak\\s?to|contact|call|pekerja|pengurus|manusia)\\b",
            "(联系|工作人员|找人|真人)"
          ],
          "flags": "i",
          "enabled": true
        }
      ]
    },
    {
      "phase": "PRE_ARRIVAL",
      "description": "Enquiry and booking phase - guest is researching or making a reservation",
      "intents": [
        {
          "category": "pricing",
          "professional_term": "Rate Inquiry",
          "patterns": [
            "\\b(price|pricing|rate|cost|how\\s?much|berapa|harga|kadar|rm\\s?\\d+)\\b",
            "(价格|多少钱|费用)"
          ],
          "flags": "i",
          "enabled": true
        },
        {
          "category": "availability",
          "professional_term": "Availability Check",
          "patterns": [
            "\\b(available|availability|any\\s?(room|capsule|bed)|vacancy|ada\\s?(bilik|katil|kosong))\\b",
            "(有没有.*房|空房|还有.*位)"
          ],
          "flags": "i",
          "enabled": true
        },
        {
          "category": "booking",
          "professional_term": "Reservation Request",
          "patterns": [
            "\\b(book|booking|reserve|reservation|tempah|tempahan|i\\s?want\\s?to\\s?(book|stay|reserve))\\b",
            "(预[订定]|我要.*[订定])"
          ],
          "flags": "i",
          "enabled": true
        },
        {
          "category": "directions",
          "professional_term": "Location & Navigation Assistance",
