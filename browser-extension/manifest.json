{
  "manifest_version": 3,
  "name": "PelangiManager Server Launcher",
  "version": "1.0.0",
  "description": "Auto-detect when PelangiManager servers aren't running and offer to start them",
  "permissions": [
    "webRequest",
    "webNavigation",
    "activeTab"
  ],
  "host_permissions": [
    "http://localhost:3000/*",
    "http://localhost:3002/*",
    "http://localhost:5000/*",
    "http://localhost:9999/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "http://localhost:3000/*",
        "http://localhost:3002/*",
        "http://localhost:5000/*"
      ],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "action": {
    "default_popup": "popup.html"
  }
}
